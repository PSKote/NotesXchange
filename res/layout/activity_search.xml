    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Search by Category"
        android:id="@+id/btn_searchCategory"
        android:padding="12dp"
        android:background="@drawable/white_rounded_button"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Search by College"
        android:id="@+id/btn_searchCollege"
        android:layout_below="@id/btn_searchCategory"
        android:padding="12dp"
        android:background="@drawable/white_rounded_button"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Search by Year"
        android:id="@+id/btn_searchYear"
        android:layout_below="@id/btn_searchCollege"
        android:padding="12dp"
        android:background="@drawable/white_rounded_button"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Search by Branch"
        android:id="@+id/btn_searchBranch"
        android:layout_below="@id/btn_searchYear"
        android:padding="12dp"
        android:background="@drawable/white_rounded_button"/>

    <include layout="@layout/layout_bottom_navigation_view"/>

</RelativeLayout>